<header id="pageHeader">
    <h1 class="title">Notes</h1>
</header>

<main>
    <section id="setting">
        <form method="get" action="/" id="settingOptions">
            <div id="orderSettings">

                <h4>Sorted by: </h4>
                <div class="orderButtonHolder">
                    <button type="submit" name="sort" value="dueDate/{{switchOrderValue orderValue}}"
                            class="glyphicon {{sortOrderStyle sort orderValue "dueDate"}} btn btn-default ">
                        By Finish Date
                    </button>

                    <button type="submit" name="sort" value="createdDate/{{switchOrderValue orderValue}}"
                            class="glyphicon {{sortOrderStyle sort orderValue "createdDate"}} btn btn-default ">
                        By created Date
                    </button>

                    <button type="submit" name="sort" value="priority/{{switchOrderValue orderValue}}"
                            class="glyphicon {{sortOrderStyle sort orderValue "priority"}} btn btn-default ">
                        By Importance
                    </button>

                </div>
            </div>
            <div id="actionButtons">
                <button type="submit" class="btn btn-default" name="showFinished"
                        value="{{showFinished}}">{{typesOfNotesText showFinished}}</button>

                <button type="submit" id="styleSwitcher" name="style" value="{{switchStyle style}}"
                        class="btn btn-default"> Style switcher
                </button>
            </div>

        </form>
        <a href="/create" id="createNote" class="btn btn-primary"> Create new Note</a>


    </section>

    <section id="container">
        <header>
            <h2> Your Note list </h2>
        </header>
        {{#if notes.length}}
            {{#each notes}}
                <form method="get" action="/edit/{{_id}}" class="notes">

                    <h3>Title: {{title}}</h3>

                    <p>description: {{description}}</p>

                    <p>priority:
                        {{{priorityTimes priority}}}
                    </p>

                    <time id="dueTime" datetime="{{dateFormat dueDate 'MMM Do YY'}}">
                        dueDate: {{dateFormat dueDate 'MMM Do YY'}}</time>
                    <div class="noteBottom">
                        <label><input type="checkbox" name="isFinished" value="isFinished" {{checkboxState isFinished}}
                                      disabled  class="isFinishedStatus">isFinished</label>

                        <button type="submit" class="btn btn-primary editButton"> Edit Note</button>
                    </div>
                </form>
            {{/each}}
        {{else}}
            <div class="alert alert-danger" role="alert"> No notes found</div>
        {{/if}}

    </section>
</main>
