<header class="page-header title">
    <h1>{{title}}</h1>
</header>

<main>

    <div class="container">
        <form id="form-note-update" method="post" action="/save">

            <div class="input-row">
                <label for="title" class="control-label">Title</label>
                <input id="title" name="title" type="text" class="form-control" required/>
            </div>

            <div class="input-row">
                <label for="description" class="control-label">Description</label>
                <textarea class="form-control" id="description" name="description"></textarea>
            </div>

            <div class="input-row">
                <label for="priority" class="control-label">priority</label>
                <input id="priority" name="priority" type="number" class="form-control" min="1" max="5" required/>
            </div>

            <div class="input-row">
                <label for="dueDate" class="control-label">Due Date</label>
                <input id="dueDate" name="dueDate" type="date" class="form-control" required placeholder="YYYY/MM/DD" pattern="\d{4}/\d{2}/\d{2}"/>
            </div>

            <div class="input-row no-label">
                <label>
                    <input id="isFinished" name="isFinished" type="checkbox"> done
                </label>
            </div>

            <div class="form-button-holder">
                <a href="/" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</main>